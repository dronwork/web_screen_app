%html{:lang => "en"}
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{:charset => "UTF-8"}/
    %meta{:name => "viewport"}/
    %title Doc
    :css
      .container{
        position: relative;
        width: 100%;
        max-width: 1900px;
        background: black;
      }
      .container img{
        border-bottom: 2px solid white;
        width: 100%;
        height: 800px;
      }
      .container .btn{
        position: relative;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        -ms-transform: translate(-50%, -50%);
        background: #555;
        color: white;
        font-size: 16px;
        padding: 12px 24px;
        border: none;
        text-align: center;
      }
      .container .btn:hover{
        background: black;
      }
  %body
    .container
      = image_tag("2.jpg")
      = link_to 'Admin Panel', 'e.com', class: 'btn'
